<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <g:DockLayoutPanel unit='EM'>
    <g:north size='4'>
      <g:Panel ui:field="header" />
    </g:north>
    <g:south size='1'>
      <g:Panel ui:field="footer" />
    </g:south>
    <g:center>
      <g:SimplePanel ui:field="display" />
    </g:center>
    <g:west size='10'>
      <g:Panel ui:field="navigation" />
    </g:west>
  </g:DockLayoutPanel>

</ui:UiBinder>